<?xml version="1.0" encoding="UTF-8"?>

<sdr>

  <recording description="SDR recording module configuration">

    <logs>
      <!-- Default Path -->
      <base path="/opt/sdr/log" description="base log directory" />
      <current path="/opt/sdr/log/current" description="current log directory" />
      <daily path="/opt/sdr/log/daily" description="daily log directory" />
    </logs>

    <!-- HostId -->
    <hostid></hostid>

    <!-- Subscription Id -->
    <subscription>demo</subscription>

    <!-- Group Name -->
    <group>development</group>

    <!-- Transport Settings -->
    <transport description="Transport settings">
      <private_key path="" description="The private authentication key" />

      <!-- Reporting Destination -->
      <destination>reporting</destination>

      <!-- Instant Mode, Protocol Type: http|https|ssh2 -->
      <protocol>http</protocol>

      <!-- TCP Keepalive 0: disabled, 1: enabled -->
      <tcp_keepalive>0</tcp_keepalive>

      <!-- Raw Data sdrd Files -->
      <data>
        <sdrd name="sys"  description="system data, sysrec.sdrd" />
        <sdrd name="cpu"  description="per-cpu data, cpurec.sdrd"  />
        <sdrd name="disk" description="per-disk data, diskrec.sdrd" />
        <sdrd name="nic"  description="per-NIC data, nicrec.sdrd"  />
        <sdrd name="hdw"  description="inventory data, hdwrec.sdrd"  />
      </data>

    </transport>

  </recording>


  <reporting description="SDR reporting module configuration">

    <!-- Destination Reporting Servers -->
    <host name="reporting" ver="1.00" description="SDR reporting server">
      <http description="default HTTP port">
        <port>80</port>
        <!-- Via HTTP Proxy -->
        <proxy></proxy>
        <proxyport></proxyport>
      </http>

      <https description="default HTTPS port">
        <port>443</port>
        <!-- Via HTTP Proxy -->
        <proxy></proxy>
        <proxyport></proxyport>
      </https>

      <ssh2 description="default SSH2 port">
        <port>22</port>
      </ssh2>

      <ftp description="default FTP port">
        <port>21</port>
      </ftp>

      <username>sdr</username>
      <!-- PLEASE USE SSH Public Key Based Authentication ! -->
      <password></password>
    </host>

    <host name="test" ver="0.80" description="SDR reporting test server">
      <http description="default HTTP port">
        <port>90</port>
        <!-- Via HTTP Proxy -->
        <proxy></proxy>
        <proxyport></proxyport>
      </http>

      <ssh2 description="default SSH2 port">
        <port>9022</port>
      </ssh2>

      <username>sdr</username>
      <!-- PLEASE USE SSH Public Key Based Authentication ! -->
      <password></password>
    </host>

  </reporting>

</sdr>
